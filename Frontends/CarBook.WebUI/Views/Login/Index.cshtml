@model CheckLoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>CarBook Yönetim Panel - Giriş Yap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Araç Kiralama Hizmetleri için doğru adres" name="description" />
    <meta content="Enes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- App css -->
    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="/Default/Index/" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-alpha-x-circle"></i> <b>CarBook</b>
                                            </a>h
                                        </div>
                                        <h1 class="h5 mb-1">Hoşgeldin!</h1>
                                        <p class="text-muted mb-4">Yönetim Paneline Erişim İçin Giriş Yapmalısın.</p>
                                        <form class="user"method="post">
                                            <div class="form-group">
                                                <input type="text"asp-for="Username" class="form-control form-control-user" id="exampleInputEmail" placeholder="Kullanıcı Adınız">
                                            </div>
                                            <div class="form-group">
                                                <input type="password"asp-for="Password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Şifreniz">
                                            </div>
                                            <button class="btn btn-success btn-block waves-effect waves-light"> Giriş Yap </button>

                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-2"><a href="pages-recoverpw.html" class="text-muted font-weight-medium ml-1">Forgot your password?</a></p>
                                                <p class="text-muted mb-0">Hesabın Yok Mu? <a href="/Register/CreateAppUser/" class="text-muted font-weight-medium ml-1"><b>Kayıt Ol</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div> 
                </div> 
            </div>
        </div>
    </div>

    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>

    <script src="~/Admin/vertical/assets/js/theme.js"></script>

</body>

</html>